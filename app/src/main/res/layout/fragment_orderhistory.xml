<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainFragment.OrderhistoryFragment"
                android:layout_marginTop="24dp"
android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/rl_cart_frag_title_bar"
            android:layout_width="match_parent"
            android:layout_height="46dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문내역"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>


        <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#afafaf"
                android:layout_alignParentBottom="true"></View>

    </RelativeLayout>


    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
     android:layout_marginTop="39.5dp"
      android:layout_marginLeft="39dp">

        <TextView
                android:id="@+id/tv_orderhistory_frag_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"/>

        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="님"
           android:layout_marginLeft="6dp"
           android:textSize="15sp"
           android:textColor="@color/warm_grey_two"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_order_frag_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="26.5dp"
            android:layout_marginRight="26.5dp"
            android:paddingBottom="30dp">
    </android.support.v7.widget.RecyclerView>







</LinearLayout>