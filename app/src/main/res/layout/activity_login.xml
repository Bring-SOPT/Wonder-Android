<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        tools:context=".LoginProcess.LoginActivity"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp">


   <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:id="@+id/ll_login_act_titlebar"
           android:orientation="horizontal"
             android:gravity="center">


           <TextView android:layout_width="wrap_content"
                     android:id="@+id/tv_login_act_title"
                     android:text="로그인"
                     android:textSize="20dp"
                     android:textColor="#707070"
                     android:layout_height="wrap_content"
                android:layout_gravity="center">

           </TextView>


   </LinearLayout>



        <View android:layout_width="match_parent"
              android:layout_height="0.3dp"
              android:background="#afafaf"
              android:layout_alignBottom="@+id/ll_login_act_titlebar">

        </View>




    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >


        <EditText
                android:id="@+id/et_login_act_id"

                android:layout_width="268dp"
                android:layout_height="44dp"
                android:background="#5effffff"

                android:layout_marginTop="22dp"
                android:textColorHint="#909090"
                android:hint="아이디"
                android:textSize="14sp"
                android:paddingLeft="17dp"/>

        <EditText
                android:id="@+id/et_login_act_pw"
                android:layout_width="268dp"
                android:layout_height="44dp"
                android:background="#5effffff"
                android:layout_marginTop="15dp"
                android:textColorHint="#909090"
                android:hint="비밀번호"
                android:textSize="14sp"
                android:paddingLeft="17dp"/>

        <RelativeLayout
                android:layout_marginTop="42dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/et_login_act_pw">
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_login_act_"
                      android:layout_toLeftOf="@id/tv_login_act_movetosignup"

                      android:text="계정이 없으신가요?  >"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_alignParentRight="true"
                      android:id="@+id/tv_login_act_movetosignup"
                      android:text="회원가입"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>



    <TextView
            android:id="@+id/tv_login_act_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"

            android:background="#ffa326"
            android:text="로그인"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"/>


    <!--로그인 색깔 바꾸는 if else 구문, 로그인 외쪽에 뒤로가기버튼 이상함.-->
    <!--아이디 비밀번호 아웃라인색입히기, 로그인 실패시 토스트메세지 띄우기 서버통신-->
    <!--로고넣음-->

</RelativeLayout>