<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginProcess.SignupActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:paddingBottom="40dp">
        <ImageView
                android:layout_width="221dp"
                android:layout_height="59dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="친구들의 사진과 동영상을 보려면\n가입하세요."
                android:layout_marginTop="7dp"
                android:layout_gravity="center_horizontal"
        />

        <EditText
                android:id="@+id/et_email_join"
                android:layout_width="268dp"
                android:layout_height="44dp"
                android:background="#5effffff"
                android:layout_marginTop="22dp"
                android:textColorHint="#ffffff"
                android:hint="이메일"
                android:textSize="14sp"
                android:paddingLeft="17dp"/>

        <EditText
                android:id="@+id/et_pw_join"
                android:layout_width="268dp"
                android:layout_height="44dp"
                android:background="#5effffff"
                android:layout_marginTop="19dp"
                android:textColorHint="#ffffff"
                android:hint="비밀번호"
                android:textSize="14sp"
                android:paddingLeft="17dp"/>

        <EditText
                android:id="@+id/et_name_join"
                android:layout_width="268dp"
                android:layout_height="44dp"
                android:background="#5effffff"
                android:layout_marginTop="19dp"
                android:textColorHint="#ffffff"
                android:hint="사용자이름"
                android:textSize="14sp"
                android:paddingLeft="17dp"/>

        <EditText
                android:id="@+id/et_part_join"
                android:layout_width="268dp"
                android:layout_height="44dp"
                android:background="#5effffff"
                android:layout_marginTop="19dp"
                android:textColorHint="#ffffff"
                android:hint="파트"
                android:textSize="14sp"
                android:paddingLeft="17dp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/btn_join_join"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="#5effffff"
            android:text="@string/signup"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>