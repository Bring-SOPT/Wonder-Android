<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginProcess.SignupActivity">

    <LinearLayout android:layout_width="22dp"
                  android:orientation="vertical"
                  android:layout_marginTop="36dp"
                  android:layout_marginBottom="682dp"
                  android:layout_marginRight="321dp"
                  android:layout_marginLeft="17dp"
                  android:layout_height="22dp"
                    android:id="@+id/topLayout">

        <ImageView android:layout_width="match_parent"
                   android:id="@+id/btn_signup_act_back"
                   android:src="@drawable/leftchevron"
                   android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_marginTop="70.5dp"
                  android:layout_height="wrap_content">

        <View android:layout_width="match_parent"
              android:layout_height="0.3dp"
              android:background="#afafaf"></View>
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                                     android:layout_marginTop="36dp"
                                     android:layout_marginBottom="682dp"
                                     android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent"
              android:id="@+id/tv_signup_act_title"

              android:text="회원가입"
              android:textSize="20dp"
              android:gravity="center"
              android:textColor="#707070"
              android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="116dp"
            android:layout_centerHorizontal="true"
            android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#fa7268"
                android:text="브링"
                android:layout_marginTop="7dp"
                android:layout_gravity="center_horizontal"
                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#909090"
                android:gravity="center_horizontal"
                android:text="에 오신 것을 환영합니다!"
                android:layout_marginTop="7dp"
                android:layout_gravity="center_horizontal"/>

    </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <EditText
                    android:id="@+id/et_signup_act_id"
                    android:background="@drawable/login_edit_border_off"
                    android:layout_width="400dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="22dp"
                    android:textColorHint="#909090"
                    android:hint="아이디"
                    android:textSize="14sp"
                    android:paddingLeft="17dp"/>

            <ImageView
                    android:layout_toLeftOf="@id/et_signup_act_id"
                    android:layout_width="69dp"
                    android:layout_height="44dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignBottom="@+id/et_signup_act_id"
                    android:id="@+id/btn_signup_act_check_duplicate_off"
                    android:src="@drawable/check_duplicate_off"
                    android:layout_alignParentRight="true"
            />

            <TextView android:layout_width="wrap_content"
                      android:lineSpacingExtra="2sp"
                      android:textColor="#006fff"
                      android:id="@+id/tv_signup_act_canuseid"
                      android:paddingLeft="10dp"
                      android:text="사용 할 수 있는 아이디 입니다"
                      android:layout_below="@id/et_signup_act_id"
                      android:layout_height="wrap_content"
                      android:visibility="gone"/>
        </RelativeLayout>



        <EditText
                android:id="@+id/et_signup_act_pw1"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:background="@drawable/login_edit_border_off"
                android:layout_marginTop="19dp"
                android:textColorHint="#909090"
                android:hint="비밀번호"
                android:textSize="14sp"
                android:paddingLeft="17dp"
                 android:inputType="textPassword"/>

        <EditText
                android:id="@+id/et_signup_act_pw2"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:background="@drawable/login_edit_border_off"
                android:textColorHint="#909090"
                android:hint="비밀번호확인"
                android:textSize="14sp"
                android:paddingLeft="17dp"
                android:inputType="textPassword"/>

        <TextView android:layout_width="wrap_content"
                  android:lineSpacingExtra="2sp"
                  android:textColor="#006fff"
                  android:id="@+id/tv_signup_act_canusepw"
                  android:paddingLeft="10dp"
                  android:text="비밀번호가 일치합니다"
                  android:layout_below="@id/et_signup_act_id"
                  android:layout_height="wrap_content" android:visibility="gone"/>

    </LinearLayout>


    <TextView
            android:id="@+id/btn_signup_act_next"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="#e2e2e2"
            android:text="@string/next"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#909090"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>