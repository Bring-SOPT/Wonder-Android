<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainFragment.CartFragment"
             android:layout_marginTop="24dp">

    <RelativeLayout
            android:id="@+id/rl_cart_frag_title_bar"
            android:layout_width="match_parent"
            android:layout_height="46dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장바구니"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ImageView
         android:id="@+id/iv_cart_frag_nav_line"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/nav_line"
        android:layout_below="@+id/rl_cart_frag_title_bar"/>


    <LinearLayout
        android:id="@+id/ll_cart_frag_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="33dp"
        android:orientation="horizontal"
        android:layout_below="@+id/iv_cart_frag_nav_line"
    android:layout_marginTop="33.5dp">

        <CheckBox
           android:id="@+id/btn_cart_frag_checkbox"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:checked="false"/>

        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="전체선택"
           android:textSize="15sp"
           android:gravity="center"
           android:layout_marginLeft="14dp"/>



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
       android:id="@+id/rv_cart_frag_list"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/ll_cart_frag_check"
       android:layout_marginTop="33dp"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp">



    </android.support.v7.widget.RecyclerView>


    <View
      android:layout_width="match_parent"
      android:layout_height="0.7dp"
      android:background="#afafaf"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
    android:layout_above="@+id/rl_cart_frag_order_price"></View>

    <RelativeLayout
      android:id="@+id/rl_cart_frag_order_price"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/btn_cart_frag_order"
      android:paddingLeft="37dp"
      android:paddingRight="36dp"
    android:layout_marginTop="26dp"
    android:layout_marginBottom="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 주문금액"
            android:textSize="18sp"
        android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
           android:text="10000원"/>

    </RelativeLayout>

    <ImageView
            android:id="@+id/btn_cart_frag_order"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/order"
       android:layout_alignParentBottom="true"/>

</RelativeLayout>