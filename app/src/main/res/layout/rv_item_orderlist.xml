<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="204dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp" android:id="@+id/ll_order_item_frame">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingRight="8dp"
            android:paddingLeft="10dp"
            android:background="@drawable/cardview_border_top">

        <TextView
                android:id="@+id/tv_order_item_odernum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문번호"
                android:textSize="13sp"
                android:textColor="@color/textcolor"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/tv_order_item_odernumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1010100"
                android:textSize="13sp"
                android:textColor="@color/textcolor"
                android:layout_toRightOf="@+id/tv_order_item_odernum"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/tv_order_item_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019.01.01 18:00"
                android:textSize="13sp"
                android:textColor="@color/textcolor"
                android:layout_toLeftOf="@+id/btn_order_item_detailed"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

        <ImageView
                android:id="@+id/btn_order_item_detailed"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/rightchevron"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

    </RelativeLayout>


    <LinearLayout
            android:background="@drawable/cardview_border_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


        <TextView
                android:id="@+id/tv_order_item_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="커피나무"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="22dp"/>


        <ImageView
                android:id="@+id/iv_order_item_order_present"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:src="@drawable/order_request"/>


    </LinearLayout>


</LinearLayout>