<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".LoginProcess.AgreementActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/ll_space">
    </LinearLayout>

    <TextView
            android:text="회원가입"
            android:fontFamily="@font/nanumsquareroundotfr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_space" android:textSize="20sp"/>
    <View android:layout_width="match_parent"
          android:layout_height="0.3dp"
          android:background="#afafaf" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"
          android:layout_marginTop="12.5dp" android:id="@+id/view"></View>
    <android.support.constraint.ConstraintLayout
            android:layout_width="39dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/ll_space" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/btn_agree_act_back">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/leftchevron"
                android:id="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/checking_mark_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView5" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/view"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:gravity="center"
            android:id="@+id/linearLayout4">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="이용약관"
                    android:fontFamily="@font/nanumsquareroundotfr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="0"
                    android:textSize="18sp" android:textColor="@color/colorAccent"/>
            <TextView
                    android:text="에 동의하시면"
                    android:fontFamily="@font/nanumsquareroundotfr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="0"
                    android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="회원가입이 완료됩니다!"
                    android:fontFamily="@font/nanumsquareroundotfr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="0"
                    android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.523">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical">
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cb_agree_act_whole"
                    android:layout_weight="0"/>
            <TextView
                    android:text="전체 약관에 동의합니다."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareroundotfr"
                    android:id="@+id/textView10" android:layout_weight="0"
                    android:textSize="15sp" android:textColor="@color/black"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical"
        >
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cb_agree_act_one"
                    android:layout_weight="0" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            />
            <TextView
                    android:fontFamily="@font/nanumsquareroundotfr"
                    android:text="서비스 이용약관"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="0"
                    android:textSize="15sp" android:textColor="@color/black" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cb_agree_act_one"
                    app:layout_constraintVertical_bias="0.517"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/arrow_bottom"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView6"
                    app:layout_constraintEnd_toEndOf="parent"
            />
        </android.support.constraint.ConstraintLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical"
        >
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cb_agree_act_two"
                    android:layout_weight="0" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            />
            <TextView
                    android:text="개인정보 처리방침"
                    android:fontFamily="@font/nanumsquareroundotfr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="0"
                    android:textSize="15sp" android:textColor="@color/black" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cb_agree_act_two"
                    app:layout_constraintVertical_bias="0.517"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/arrow_bottom"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView7"
                    app:layout_constraintEnd_toEndOf="parent"
            />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <TextView
            android:text="완료"
            android:fontFamily="@font/nanumsquareroundotfb"
            android:layout_width="0dp"
            android:layout_height="58dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_agree_act_submit"
            app:layout_constraintBottom_toBottomOf="parent" android:gravity="center" android:textSize="20sp"
            android:background="@color/white" app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/warm_gray"/>
</android.support.constraint.ConstraintLayout>