<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginProcess.AgreementActivity">

    <LinearLayout android:layout_width="22dp"
                  android:orientation="vertical"
                  android:layout_marginTop="36dp"
                  android:layout_marginBottom="682dp"
                  android:layout_marginRight="321dp"
                  android:layout_marginLeft="17dp"
                  android:layout_height="22dp">

        <ImageView android:layout_width="match_parent"
                   android:id="@+id/btn_signup_act_back"
                   android:src="@drawable/leftchevron"
                   android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="36dp"
                  android:layout_marginBottom="682dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/tv_agreement_act_title"

                  android:text="회원가입"

                  android:textSize="20dp"
                  android:gravity="center"
                  android:textColor="#707070"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_marginTop="70.5dp"
                  android:id="@+id/ll_agreement_act_titlebar_underline_layout"
                  android:layout_height="wrap_content">

        <View android:layout_width="match_parent"
              android:layout_height="0.3dp"
              android:background="#afafaf"></View>
    </LinearLayout>



    <ImageView android:layout_width="82.9dp"
               android:layout_marginTop="150dp"
               android:id="@+id/iv_agreement_act_checkingcircle"
               android:src="@drawable/checking_mark_circle"
               android:layout_centerHorizontal="true"
               android:layout_height="82.9dp"/>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/iv_agreement_act_checkingcircle"
                    android:layout_height="match_parent">



    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_below="@id/iv_agreement_act_checkingcircle"
                  android:layout_above="@+id/btn_agreemnet_act_finish"
                  android:layout_height="match_parent" >

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="58.1dp"
                      android:layout_marginLeft="93dp"
                      android:layout_marginRight="92dp"
                      android:layout_height="wrap_content">


            <ImageButton android:layout_width="18dp"
                         android:id="@+id/btn_agreement_act_checkbox_gray1"
                         android:src="@drawable/check_box_gray"
                         android:layout_height="18dp"/>

            <TextView
                    android:layout_toRightOf="@+id/btn_agreement_act_checkbox_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2sp"
                    tools:text="전체 약관에 동의 합니다"
               android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="21.1dp"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="92dp"
                      android:layout_marginLeft="93dp">


            <ImageButton android:layout_width="18dp"
                         android:id="@+id/btn_agreement_act_checkbox_gray2"
                         android:src="@drawable/check_box_gray"
                         android:layout_height="18dp"/>

            <TextView
                    android:layout_toRightOf="@+id/btn_agreement_act_checkbox_gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="2sp"
                    tools:text="서비스 이용약관"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="21.1dp"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="92dp"
                      android:layout_marginLeft="93dp">


            <ImageButton android:layout_width="18dp"
                         android:id="@+id/btn_agreement_act_checkbox_gray3"
                         android:src="@drawable/check_box_gray"
                         android:layout_height="18dp"/>

            <TextView
                    android:layout_toRightOf="@+id/btn_agreement_act_checkbox_gray3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="2sp"
                    tools:text="개인정보 처리방침"/>
        </LinearLayout>


    </LinearLayout>


    <ImageButton
            android:id="@+id/btn_agreemnet_act_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/complete_off"
            android:background="@color/transparent"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>