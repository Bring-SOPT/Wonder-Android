<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginProcess.NicknameActivity">
    <LinearLayout android:layout_width="22dp"

                  android:orientation="vertical"
                  android:layout_marginTop="36dp"
                  android:layout_marginBottom="682dp"
                  android:layout_marginRight="321dp"
                  android:layout_marginLeft="17dp"
                  android:layout_height="22dp">

        <ImageView android:layout_width="match_parent"
                   android:id="@+id/btn_signup_act_back"
                   android:src="@drawable/leftchevron"
                   android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_marginTop="70.5dp"
                  android:id="@+id/ll_nickname_act_titlebar_underline_layout"
                  android:layout_height="wrap_content">

        <View android:layout_width="match_parent"
              android:layout_height="0.3dp"
              android:background="#afafaf"></View>
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="36dp"
                  android:layout_marginBottom="682dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/tv_nickname_act_title"
                  android:fontFamily="@font/nanumsquareroundotfr"
                  android:text="회원가입"
                  android:textSize="20dp"
                  android:gravity="center"
                  android:textColor="#707070"
                  android:layout_height="wrap_content"/>
    </LinearLayout>


    <RelativeLayout
            android:layout_below="@id/ll_nickname_act_titlebar_underline_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView android:layout_width="86dp"
                   android:layout_margin="45.5dp"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/user_image_upload"
                   android:id="@+id/iv_nickname_act_pictureupload"
                   android:layout_height="88dp"/>


        <EditText

                android:layout_alignTop="@+id/iv_nickname_act_pictureupload"
                android:layout_marginTop="132dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/et_nickname_act_nickname"
                android:background="@drawable/login_edit_border_off"
                android:layout_width="302dp"
                android:layout_height="48dp"
                android:textColorHint="#909090"
                android:hint="닉네임"
                android:fontFamily="@font/nanumsquareroundotfr"
                android:textSize="14sp"
                android:paddingLeft="17dp"/>

        <ImageView
                android:layout_width="69dp"
                android:layout_height="44dp"
                android:layout_alignRight="@id/et_nickname_act_nickname"
                android:id="@+id/btn_nickname_act_check_duplicate_off"
                android:src="@drawable/check_duplicate_off"
                android:layout_marginRight="15dp"
                android:layout_alignBottom="@+id/et_nickname_act_nickname"
        />
        <TextView android:layout_width="match_parent"
                  android:lineSpacingExtra="2sp"
                  android:textColor="#006fff"
                  android:id="@+id/tv_nickname_act_canusenickname"
                  android:paddingLeft="10dp"
                  android:text="사용 할 수 있는 닉네임 입니다"
                  android:layout_below="@id/et_nickname_act_nickname"
                  android:fontFamily="@font/nanumsquareroundotfr"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp"
                  android:layout_alignLeft="@+id/et_nickname_act_nickname"
                  android:visibility="gone"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/btn_nickname_act_next"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="다음"
            android:fontFamily="@font/nanumsquareroundotfb"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#e2e2e2"
            android:textColor="#909090"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>