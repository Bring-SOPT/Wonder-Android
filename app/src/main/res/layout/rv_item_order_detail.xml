<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:id="@+id/cl_item_order_detail" android:layout_height="88dp">

    <TextView
            android:text="아메리카노 ICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" android:id="@+id/tv_item_order_detail_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:textSize="16sp"
            android:textColor="@color/black"/>
    <TextView
            android:text="(Regular / 1개)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:id="@+id/tv_item_order_detail_size_amount"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_order_detail_name" android:textSize="13sp"
            android:textColor="@color/black"/>
    <TextView
            android:text="위에 생크림 올려주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_item_order_detail_request" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_order_detail_size_amount"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="10dp"/>
    <TextView
            android:text="5000원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_order_detail_cost"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" android:textSize="16sp" android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/tv_item_order_detail_size_amount" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>