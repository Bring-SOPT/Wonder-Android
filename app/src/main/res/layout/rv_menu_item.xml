<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="110dp" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btn_menu_item_whole_box"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:paddingBottom="15dp">

    <android.support.v7.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">
        <ImageView
           android:id="@+id/iv_menu_item_menu_photo"
           android:layout_width="80dp"
           android:layout_height="80dp"/>
    </android.support.v7.widget.CardView>

     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:paddingTop="11.5dp"
          android:paddingBottom="10.5dp"
          android:paddingLeft="18dp"
          android:layout_toRightOf="@+id/cv_image">

         <TextView
           android:id="@+id/tv_rv_menu_item_menu_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/store_menu_frag_text_menu_name"
           android:textStyle="bold"
           android:textSize="18sp"/>


         <TextView
           android:id="@+id/tv_rv_menu_item_menu_price"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/store_menu_frag_text_menu_price"
           android:textSize="17sp"
           android:layout_marginTop="10dp"/>

     </LinearLayout>

    



</RelativeLayout>
