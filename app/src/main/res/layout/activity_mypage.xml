<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MypageActivity">


    <LinearLayout android:layout_width="22dp"
                  android:orientation="vertical"
                  android:layout_marginTop="36dp"
                  android:layout_marginBottom="682dp"
                  android:layout_marginRight="321dp"
                  android:layout_marginLeft="17dp"
                  android:layout_height="22dp">

        <ImageView android:layout_width="match_parent"
                   android:id="@+id/btn_mypage_act_back"
                   android:src="@drawable/leftchevron"
                   android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="36dp"
                  android:layout_marginBottom="682dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/tv_mypage_act_title"

                  android:text="마이페이지"
                  android:textSize="20dp"
                  android:gravity="center"
                  android:textColor="#707070"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:id="@+id/ll_mypage_act_topbar"
                  android:layout_marginTop="70.5dp"
                  android:layout_height="wrap_content">

        <View android:layout_width="match_parent"
              android:layout_height="0.3dp"
              android:background="#afafaf"></View>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_alignBottom="@+id/ll_mypage_act_secondbar"
                    android:layout_below="@id/ll_mypage_act_topbar"
                    android:layout_height="wrap_content">

        <ImageView android:layout_width="80dp"
                   android:id="@+id/iv_mypage_act_user_image"
                   android:src="@drawable/user_default_image"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="71dp"
                   android:layout_height="80dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_toRightOf="@+id/iv_mypage_act_user_image"
                  android:id="@+id/tv_mypage_act_nickname"
                  android:layout_marginLeft="25dp"
                  android:gravity="center_vertical"
                  android:text="브링브링"
                  android:fontFamily="@font/nanumsquareroundotfb"
                  android:textColor="@color/mypage_nickname"
                  android:textSize="29sp"
                  android:lineSpacingExtra="4sp"
                  android:layout_height="match_parent"/>


    </RelativeLayout>


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:id="@+id/ll_mypage_act_secondbar"
                  android:layout_marginTop="225.5dp"
                  android:layout_height="wrap_content">

        <View android:layout_width="344dp"
              android:layout_height="0.7dp"
              android:background="#afafaf"></View>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_alignBottom="@+id/ll_mypage_act_third_bar"
                    android:layout_below="@id/ll_mypage_act_secondbar"
                    android:layout_height="wrap_content">


        <TextView android:layout_width="match_parent"
                  android:id="@+id/tv_mypage_act_point"
                  android:layout_marginLeft="40dp"
                  android:gravity="center_vertical"
                  android:text="포인트"
                  android:fontFamily="@font/nanumsquareroundotfr"
                  android:textColor="@color/colorPrimary"
                  android:textSize="20sp"
                  android:lineSpacingExtra="4sp"
                  android:layout_height="match_parent"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_mypage_act_point_amount"
                  android:layout_marginRight="42dp"
                  android:layout_alignParentRight="true"

                  android:gravity="center_vertical"
                  android:text="3000p"
                  android:fontFamily="@font/nanumsquareroundotfr"
                  android:textColor="@color/warm_gray"
                  android:textSize="20sp"
                  android:lineSpacingExtra="4sp"
                  android:layout_height="match_parent"/>

    </RelativeLayout>


    <LinearLayout android:layout_width="wrap_content"
                  android:id="@+id/ll_mypage_act_third_bar"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="340.5dp"
                  android:layout_height="wrap_content">

        <View android:layout_width="344dp"
              android:layout_height="0.7dp"
              android:background="#afafaf">
        </View>
    </LinearLayout>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_below="@id/ll_mypage_act_third_bar"
                    android:layout_alignBottom="@+id/ll_mypage_act_fourth_bar"
                    android:layout_height="wrap_content">


        <TextView android:layout_width="match_parent"
                  android:id="@+id/tv_mypage_act_coupon"
                  android:layout_marginLeft="40dp"
                  android:gravity="center_vertical"
                  android:text="쿠폰"
                  android:fontFamily="@font/nanumsquareroundotfr"
                  android:textColor="@color/colorPrimary"
                  android:textSize="20sp"
                  android:lineSpacingExtra="4sp"
                  android:layout_height="match_parent"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_mypage_act_coupon_amount"
                  android:layout_marginRight="72dp"
                  android:layout_alignParentRight="true"
                  android:gravity="center_vertical"
                  android:text="3장"
                  android:fontFamily="@font/nanumsquareroundotfr"
                  android:textColor="@color/warm_gray"
                  android:textSize="20sp"
                  android:lineSpacingExtra="4sp"
                  android:layout_height="match_parent"/>

    </RelativeLayout>




    <LinearLayout android:layout_width="wrap_content"
                  android:id="@+id/ll_mypage_act_fourth_bar"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="455.5dp"
                  android:layout_height="wrap_content">

        <View android:layout_width="344dp"
              android:layout_height="0.7dp"
              android:background="#afafaf"></View>
    </LinearLayout>

    <Button android:layout_width="135dp"
            android:id="@+id/btn_mypage_act_logout"
            android:text="로그아웃"
            android:fontFamily="@font/nanumsquareroundotfr"
            android:textSize="20sp"
            android:textColor="@color/warm_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="56dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_height="42dp"/>


</RelativeLayout>