<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp">

    <RelativeLayout
            android:id="@+id/ll_order_total_act_title_bar"
            android:layout_width="match_parent"
            android:layout_height="46.5dp"
            android:paddingLeft="19.5dp">

        <View android:layout_width="match_parent"
              android:layout_height="0.3dp"
              android:background="#afafaf"></View>


        <ImageView
                android:id="@+id/btn_order_total_act_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/leftchevron"
                android:layout_centerVertical="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="주문하기"
                android:textSize="20sp"
                android:textColor="#707070"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#afafaf"
            android:layout_below="@+id/ll_order_total_act_title_bar">
    </View>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/ll_order_total_act_title_bar">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="40dp"
                android:paddingLeft="37dp"
                android:paddingRight="36dp"
                android:gravity="center"
                android:layout_above="@+id/rl_order_total_act_pay">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 주문금액"
                    android:textSize="21sp"
                    android:textColor="#707070"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="10000원"
                    android:textColor="@color/warm_gray"
                    android:layout_centerVertical="true"
                    android:textSize="21sp"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="40dp"
                android:paddingLeft="37dp"
                android:paddingRight="36dp"
                android:gravity="center">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쿠폰"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >

            <TextView
                    android:id="@+id/tv_order_act_total_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없음"
                    android:textColor="@color/warm_gray"
                    android:layout_centerVertical="true"
                    android:textSize="21sp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drop_down_icon_pink"
                    android:layout_alignParentRight="true"
                />
            </LinearLayout>
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#afafaf"
                android:layout_marginHorizontal="50dp"></View>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="15dp"
                android:paddingLeft="37dp"
                android:paddingRight="36dp"
                android:gravity="center">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="포인트 사용"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
            >

                <TextView
                        android:id="@+id/tv_order_act_total_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/warm_gray"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:textSize="21sp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/point_icon"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                />
            </LinearLayout>
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#afafaf"
                android:layout_marginHorizontal="50dp"></View>


    </LinearLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="40dp"
            android:paddingLeft="37dp"
            android:paddingRight="36dp"
            android:gravity="center"
            android:layout_above="@+id/rl_order_total_act_payprice">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="할인합계"
                android:textSize="21sp"
                android:textColor="#868686"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0원"
                android:textColor="@color/warm_gray"
                android:layout_centerVertical="true"
                android:textSize="21sp"/>

    </RelativeLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#afafaf"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_above="@id/rl_order_total_act_payprice"></View>

    <RelativeLayout
            android:id="@+id/rl_order_total_act_payprice"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="30dp"
            android:paddingLeft="37dp"
            android:paddingRight="36dp"
            android:gravity="center"
            android:layout_above="@+id/rl_order_total_act_pay">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 결제금액"
                android:textSize="18sp"
                android:textColor="#707070"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10000원"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="30sp"/>

    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/rl_order_total_act_pay"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="#fa7268"
            android:gravity="center">

        <ImageView
                android:id="@+id/btn_order_total_act_kakaopay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kakaopay"
                android:layout_centerVertical="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white_two"
                android:text=" 로 결제하기"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btn_order_total_act_kakaopay"
        />


    </RelativeLayout>

</RelativeLayout>